<!--pages/info/detail/detail.wxml-->
<view class="container">
    <view class="title">{{info.title}}</view>
    <view class="meta-header">
        <text class="posted-date">{{info.post_date}}</text>
    </view>
    <view class="content">
        <rich-text nodes="{{info.content}}"></rich-text>
    </view>
    <view class="meta-footer">
        <!-- <text class="views">{{info.views}}</text> -->
        <text class="votes">{{info.votes}}</text>
    </view>
</view>