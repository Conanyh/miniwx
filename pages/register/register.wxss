/* pages/register/register.wxss */

.weui-cell{
  width: 70%;
  margin: 0 auto;
}

.weui-cells__title {
  padding: 23rpx 0;
  font-size: 18px;
  text-align: center;
  font-weight: 400;
  color: rgb(188, 189, 185);
}

.weui-label {
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 16px;
  color: #858585;
}
.weui-cell{
  font-size: 16px;
  color: #666;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.addDevice-btn1{
  width: 60%;
  margin: 12px auto;
  padding: 3px;
  font-size: 17px;
  font-weight: 500;
}


.addDevice-btn1 {
  background-color: #f13030 !important;
  border: 1px solid #fff !important;
  box-sizing: border-box;
}
.addDevice-btn1:hover{
  border: 1px solid #515151 !important;
}

.add_cancle_device {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:18px;
}

.weui-cell:before {
  border-top: 1px solid #666;
}
.weui-cells:after {
  bottom: 1px;
  border-bottom: 1px solid #666;
}
.weui-cells:before {
  border-top: 1rpx solid #666;
}

.binduserImg{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-left: 10px;
}
.weui-cell:before {
  border-top:none;
}
.weui-input:hover{
  border-bottom: 1px solid #f13030;
} 
.weui-input{
  border-bottom: 1px solid #2c2c38;
}
.weui-cell_active{
  background-color:f1f1f1;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


/*checkbox 整体大小  */
checkbox {
  width: 70rpx;
  height: 25rpx;
  margin-left: 10px;
}
.agree {
  font-size: 12px;
}
.agree text {
  color: rgb(110, 110, 248);
}

/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FF525C;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: left;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

