
.weui-cell{
  width: 70%;
  margin: 0 auto;
}

.weui-cells__title {
  padding: 23rpx 0;
  font-size: 18px;
  text-align: center;
  font-weight: 400;
  color: rgb(188, 189, 185);
}

.weui-label {
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 16px;
  color: #858585;
}
.weui-cell{
  font-size: 16px;
  color: #666;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.addDevice-btn1{
  width: 60%;
  margin: 12px auto;
  padding: 3px;
  font-size: 17px;
  font-weight: 500;
}


.addDevice-btn1 {
  background-color: #f13030 !important;
  border: 1px solid #fff !important;
  box-sizing: border-box;
}
.addDevice-btn1:hover{
  border: 1px solid #515151 !important;
}

.add_cancle_device {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:18px;
}

.weui-cell:before {
  border-top: 1px solid #666;
}
.weui-cells:after {
  bottom: 1px;
  border-bottom: 1px solid #666;
}
.weui-cells:before {
  border-top: 1rpx solid #666;
}

.binduserImg{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-left: 10px;
}
.weui-cell:before {
  border-top:none;
}
.weui-input:hover{
  border-bottom: 1rpx solid #f13030;
} 
.weui-input{
  border-bottom: 1rpx solid #2c2c38;
}
.weui-cell_active{
  background-color:f1f1f1;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
