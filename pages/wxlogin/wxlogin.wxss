.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 100rpx;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo button {
  font-size: 16px;
  color: #aaaaaa;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.welcome {
  color: #000;
  font-size: 13px;
}

.usermotto {
  margin-top: 80px;
  width: 70%;
}

.user-login {
  background-color: #f13030 !important;
  border: 1px solid #fff !important;
  height: 35px;
  text-align: center;
}
.user-login button {
  background-color: #f13030 !important;
  text-align: center;
  color: #fff;
  font-size: 12px;
  line-height: 35px;
}