<view class='personListStyle'>
  <view class="weui-grids">
   
    <block wx:for="{{personList}}" wx:for-item="item" wx:key="key">
      <view class="weui-grid" hover-class="weui-grid_active" catchtap="personInfo" data-pid='{{item.id}}'>
        <view>
          <image class="weui-grid__icon" src="{{item.image}}" />
          <view class="weui-grid__label">{{item.name}}</view>
        </view>
      </view>
    </block>

  </view>
</view>