page{
  font-weight: 500;
}

.weui-panel {
  margin-top: 10px;
  position: relative;
}

.weui-panel:after {
  border-bottom: 1px solid #f1f1f1;
  left: 15px;
  right: 15px;
}
.weui-panel__hd {
  padding: 16px 15px 16px;
  color: #515151;
  position: relative;
  font-size: 17px;
}

.weui-media-box {
  padding: 15px 8px;
  position: relative;
}

.weui-cell__bd{
  color: #515151;
  font-size: 16px;
}
.weui-cells:before {
  border-top: none;
}
.weui-cells:after, .weui-cells:before {
  color: #515151;
}
.weui-cells:after {
  border-bottom: 1px solid #f1f1f1;
  left: 15px;
  right: 15px;
}

.weui-panel__hd:after {
  border-bottom: 1px solid #f1f1f1;
  color: #515151;
  right: 15px;
  left: 15px;                              
}
.weui-media-box:before {
  content: "";
  border-top: none;
}
.weui-media-box__desc {
  color: #515151;
  font-size: 13px;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.weui-media-box__thumb{
  border-radius: 100%;
}